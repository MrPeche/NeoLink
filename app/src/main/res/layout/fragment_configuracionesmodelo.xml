<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondito"
    tools:context="com.greenbird.neolink_app.configuracionesmodelo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/Tamañotitulo"
                android:text="@string/Titutloconfiguraciones"
                android:textColor="@color/colorTextoNegro"
                android:padding="@dimen/margencard"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margencard"
                app:cardCornerRadius="@dimen/cardRadio"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/activity_vertical_margin"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:weightSum="6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:textSize="@dimen/Tamañosubtitulo"
                        android:text="@string/Generales"
                        android:textColor="@color/colorTextoNegro"
                        android:layout_weight="2"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/nav_header_vertical_spacing"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/switch1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:textSize="@dimen/Tamañotexto"
                            android:text="@string/sonido"
                            android:textColor="@color/colorTextoGris"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:layout_gravity="center"
                            android:textSize="@dimen/Tamañotexto"
                            android:text="@string/tiempoentredatos"
                            android:textColor="@color/colorTextoGris"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20sp" />

                        <EditText
                            android:id="@+id/tiempoentredatos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:inputType="number"
                            android:ems="3"
                            android:textSize="@dimen/Tamañotexto"
                            android:textColor="@color/colorTextoGris"
                            android:importantForAutofill="no"
                            android:hint="@string/minutos" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/nav_header_vertical_spacing"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/portrq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:text="@string/portRQ"
                            android:textSize="@dimen/Tamañotexto"
                            android:textColor="@color/colorTextoGris"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/nav_header_vertical_spacing"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/gpsrq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/gpsRQ"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/colorTextoGris"
                            android:textSize="@dimen/Tamañotexto"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margencard"
                app:cardCornerRadius="@dimen/cardRadio"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/activity_vertical_margin"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:textSize="@dimen/Tamañosubtitulo"
                        android:text="@string/ConfiguracionesEspecificas"
                        android:textColor="@color/colorTextoNegro"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:layout_marginVertical="@dimen/nav_header_vertical_spacing"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_weight="1"
                            android:fontFamily="@font/lato"
                            android:textSize="@dimen/Tamañotexto"
                            android:textColor="@color/colorTextoGris"
                            android:text="@string/Wifi_SSID" />

                        <TextView
                            android:id="@+id/nombredelwifi"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/colorTextoGris"
                            android:textSize="@dimen/Tamañotexto" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:layout_marginVertical="@dimen/nav_header_vertical_spacing"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@font/lato"
                            android:textSize="@dimen/Tamañotexto"
                            android:textColor="@color/colorTextoGris"
                            android:text="@string/firmware" />

                        <TextView
                            android:id="@+id/firmware"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/colorTextoGris"
                            android:textSize="@dimen/Tamañotexto" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:layout_marginVertical="@dimen/nav_header_vertical_spacing"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@font/lato"
                            android:textSize="@dimen/Tamañotexto"
                            android:textColor="@color/colorTextoGris"
                            android:text="@string/GPS" />

                        <TextView
                            android:id="@+id/gps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/colorTextoGris"
                            android:textSize="@dimen/Tamañotexto" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:layout_marginVertical="@dimen/nav_header_vertical_spacing"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@font/lato"
                            android:textSize="@dimen/Tamañotexto"
                            android:textColor="@color/colorTextoGris"
                            android:text="@string/LastUpload" />

                        <TextView
                            android:id="@+id/lastupdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/colorTextoGris"
                            android:textSize="@dimen/Tamañotexto" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margencard"
                app:cardCornerRadius="@dimen/cardRadio"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/activity_vertical_margin"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/lato"
                        android:text="@string/Limites"
                        android:textColor="@color/colorTextoNegro"
                        android:textSize="@dimen/Tamañosubtitulo" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>