<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardRadio"
    app:cardElevation="@dimen/cardelevasion"
    app:strokeWidth="1dp"
    app:strokeColor="@color/stroke_color"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true"
    android:layout_margin="4dp"
    android:theme="@style/cardview"
    style="@style/Widget.MaterialComponents.CardView"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/Margendeconfiguracionconsensores"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:weightSum="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:textSize="@dimen/Tamañotextopequeño"
                android:textColor="@color/colorojo"
                android:gravity="start|top"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:textSize="@dimen/Tamañotextopequeño"
                android:textColor="@color/colorojo"
                android:gravity="start|top"
                android:maxLines="1"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headerregistrocontenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margendeconfiguracionconsensores"
                android:fontFamily="@font/lato"
                android:gravity="start|top"
                android:textColor="@color/colorTextoNegro"
                android:textSize="@dimen/Tamañotextopequeño" />

            <TextView
                android:id="@+id/registrocontenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:gravity="start|top"
                android:textColor="@color/colorTextoNegro"
                android:textSize="@dimen/Tamañotextopequeño" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/registroeditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:clickable="true"
                android:contentDescription="@string/registroeditar"
                app:srcCompat="@drawable/editaricon"
                app:tint="@color/coloracelestedelaapp"
                tools:ignore="VectorDrawableCompat"
                android:focusable="true" />

            <ImageView
                android:id="@+id/registroborrar"
                android:layout_gravity="top|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/borraricon"
                tools:ignore="VectorDrawableCompat"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/coloracelestedelaapp"
                android:contentDescription="@string/registroborrar" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>