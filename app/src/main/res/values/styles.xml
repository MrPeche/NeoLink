<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#849AAF</item>
        <item name="colorPrimaryDark">#3C77AF</item>
        <item name="colorAccent">#73AA86</item>


    </style>

    <style name="materialtheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">#849AAF</item>
        <item name="colorPrimaryDark">#3C77AF</item>
        <item name="colorAccent">#73AA86</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000000</item>
        <item name="android:textColorPrimary">#3C77AF</item>
        <item name="android:background">#FFFFFF</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cardview" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#849AAF</item>
        <item name="colorPrimaryDark">#3C77AF</item>
        <item name="colorAccent">#73AA86</item>
    </style>

    <style name="camposdeingreso" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#849AAF</item>
        <item name="colorControlActivated">#73AA86</item>
        <item name="colorControlHighlight">#73AA86</item>
    </style>

    <style name="camposdeingresoalterno" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#849AAF</item>
        <item name="colorControlActivated">#73AA86</item>
        <item name="colorControlHighlight">#73AA86</item>
        <item name="colorError">#73AA86</item>
        <item name="colorOnError">#73AA86</item>
    </style>

    <style name="camposdecajas" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>

    </style>
    <style name="CounterOverFlow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#73AA86</item>
    </style>

    <style name="TextAppearance.Design.Counter." parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFDA2A2A</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
